<!-- The outermost container for a single task -->
<div class="single-task-container">

  <!-- A card that displays the task details -->
  <div class="task-card task-list" id="single-task">

    <!-- Container for the task name -->
    <div>
      <!-- The task name is displayed here -->
      <h4>{{task.name}}</h4>
    </div>

    <!-- Container for the task description -->
    <div>
      <!-- The task description is displayed here -->
      <p>{{task.description}}</p>
    </div>

    <!-- Container for the task priority -->
    <div>
      <!-- The task priority is displayed here -->
      <p class="priority">{{task.priority}}</p>
    </div>

    <!-- Container for the task progress (currently commented out) -->
    <!-- <div>
      <p class="progress">{{task.progress}}</p>
    </div> -->

    <!-- Container for the task due date -->
    <div>
      <!-- The task due date is displayed here, formatted by the 'format_date' function -->
      <p>{{format_date task.due_date}}</p>
    </div>

    <!-- Container for the task action buttons -->
    <div>
      <!-- The 'Delete' button for the task. The 'data-id' attribute holds the task id -->
      <button class="delete-button" data-id="{{task.id}}">DELETE</button>
      <!-- The 'Edit' button for the task. The 'data-id' attribute holds the task id -->
      <button class="edit-button" data-id="{{task.id}}">EDIT</button>
    </div>

  </div>
</div>

