    <!-- Paragraph with class 'p' displaying the text 'Due Date of Task:' -->
    <p class="p">Due Date of Task:</p>
    <!-- Input field of type date with id 'due-date'. The value is set by the server-side template engine -->
    <input type="date" id="due-date" value="{{format_html_date due_date}}"></input>
<!-- End of div element -->
</div>

