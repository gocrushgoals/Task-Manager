<!-- This is a form for editing task details. It has a class of "edit-task-container" and "form" -->
<form class="edit-task-container form">
    <!-- This is a container for the task name input -->
    <div>
        <!-- This is a paragraph that serves as a label for the task name input -->
        <p class="p">Name of Task:</p>
        <!-- This is a textarea for inputting the task name. The current task name is displayed by default -->
        <textarea id="name">{{name}}</textarea>
    </div>
    <!-- This is a container for the task description input -->
    <div>
        <!-- This is a paragraph that serves as a label for the task description input -->
        <p class="p">Description of Task:</p>
        <!-- This is a textarea for inputting the task description. The current task description is displayed by default -->
        <textarea id="description">{{description}}</textarea>
    </div>
    <!-- This is a container for the task priority input -->
    <div>
        <!-- This is a paragraph that serves as a label for the task priority input -->
        <p class="p">Priority of Task:</p>
        <!-- This is a select dropdown for choosing the task priority. The current task priority is selected by default -->
        <select name="priority "id="priority">
            <!-- This is an option for high priority tasks. It is selected by default if the current task is high priority -->
            <option value="true" {{#if priority}}selected{{/if}}>High Priority</option>
            <!-- This is an option for low priority tasks. It is selected by default if the current task is low priority -->
            <option value="false" {{#unless priority}}selected{{/unless}}>Low Priority</option>
        </select>
    </div>
